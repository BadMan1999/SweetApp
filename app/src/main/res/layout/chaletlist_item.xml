<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="250dp"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/EditChalet"
                android:layout_width="wrap_content"
                android:layout_height="94dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/editchalet" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/DeleteChalet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="80dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/deletechalet" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_height="262dp"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="307dp"
                android:layout_height="154dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/splash"


                />

            <TextView
                android:id="@+id/salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:text="600شيكل "

                android:textColor="@color/black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/name_chalet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="40dp"
                android:layout_weight="2"

                android:text="شاليه النجوم"
                android:textColor="#000"
                android:textSize="26sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="190dp"
                android:layout_marginRight="20dp"
                android:numStars="5"
                android:rating="2.5"
                android:theme="@style/Widget.AppCompat.RatingBar" />


            <LinearLayout
                android:layout_width="313dp"
                android:layout_height="34dp"
                android:layout_gravity="end"
                android:layout_marginTop="230dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10H"
                    android:textColor="#0B0A0A"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"



                    />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="40dp"
                    android:text="غزة/ شارع النصر /مقابل مول ستبس"
                    android:textColor="#0B0A0A"
                    android:textSize="16sp"
                    android:layout_marginTop="3dp"


                    />


            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>



</LinearLayout>