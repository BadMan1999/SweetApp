<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bcakground"
    tools:context=".Activity.TenantLoginActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/splash_image"
        android:layout_width="135dp"
        android:layout_height="wrap_content"

        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/splash"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <EditText
        android:id="@+id/TenantLoginEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="50dp"
        android:background="@color/green"
        android:gravity="center"
        android:hint="البريد الالكتروني"
        android:textColorHint="@color/black" />


    <EditText
        android:id="@+id/TenantLoginPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:background="@color/green"
        android:gravity="center"
        android:hint="كلمة المرور"
        android:textColorHint="@color/black" />
    <TextView
        android:id="@+id/TenantForgetPass"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="250dp"
        android:text="نسيت كلمة المرور"
        android:textColor="@color/black"
        android:textSize="18dp"




        />



    <Button
        android:id="@+id/TenantLoginbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_marginTop="30dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:text="تسجيل الدخول"
        android:textSize="27dp"
        android:textStyle="bold"
        />

</LinearLayout>